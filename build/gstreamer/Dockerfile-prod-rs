ARG GSTREAMER_VERSION

FROM pintoinc/gstreamer:${GSTREAMER_VERSION}-base-${TARGETARCH}

FROM pintoinc/gstreamer:${GSTREAMER_VERSION}-dev-${TARGETARCH}

COPY --from=0 /gst-plugins-rs /gst-plugins-rs

ENV DEBUG=false
ENV OPTIMIZATIONS=true
ENV PATH=/root/.cargo/bin:$PATH

COPY compile-rs /

RUN /compile-rs 

FROM pintoinc/gstreamer:${GSTREAMER_VERSION}-prod-${TARGETARCH}

COPY --from=1 /compiled-binaries /
